    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Fragment04"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/f4_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="3dp"
            android:text="1.okhttp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/f4_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/SkyBlue"
            android:padding="3dp"
            android:text="2.rx实例"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/f4_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/SkyBlue"
            android:padding="3dp"
            android:text="3.rx操作符"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/f4_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/SkyBlue"
            android:padding="3dp"
            android:text="4.rx操作符"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/f4_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/LightSalmon"
            android:padding="3dp"
            android:text="5.retrofit下载"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/f4_tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#47D8BB"
            android:padding="3dp"
            android:text="6.线程池"
            android:textSize="20sp" />


