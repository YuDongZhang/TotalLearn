<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/f2_tv1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Fragment02"
        android:textSize="35sp" />

    <Button
        android:id="@+id/f2_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/f2_bt1"
        android:layout_alignBottom="@+id/f2_bt1"
        android:layout_toStartOf="@+id/f2_b2"
        android:text="1:抽屉布局" />

    <Button
        android:id="@+id/f2_b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f2_tv1"
        android:layout_toStartOf="@+id/f2_b3"
        android:text="2:预留按钮" />

    <Button
        android:id="@+id/f2_b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/f2_tv1"
        android:text="3:dagger2" />

    <Button
        android:id="@+id/f2_b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/f2_b1"
        android:text="4:倒计时的测试" />


    <Button
        android:id="@+id/f2_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f2_tv1"
        android:text="sractivity" />

    <Button
        android:id="@+id/f2_b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/f2_b4"
        android:layout_alignBottom="@+id/f2_b4"
        android:layout_toEndOf="@+id/f2_b4"
        android:text="5.daggermvp" />

    <Button
        android:id="@+id/f2_b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f2_b2"
        android:layout_toEndOf="@+id/f2_b5"
        android:text="6.okgo" />


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="阴影狀態cardview" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="121dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/f2_b4" />
</RelativeLayout>