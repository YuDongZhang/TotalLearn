<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Fragment03"
        android:textSize="35sp" />

    <com.example.totallearn.customview.VerticalSeekBar
        android:id="@+id/vertical_Seekbar"
        android:layout_width="60dp"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/vertical_Seekbar"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/f3_b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_toEndOf="@+id/vertical_Seekbar"
                android:text="1.启动的测试Activity" />



        </LinearLayout>
        <Button
            android:id="@+id/f3_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/f3_b1"
            android:layout_below="@+id/f3_b1"
            android:text="2.Button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/f3_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2B2B2B"
                android:padding="5dp"
                android:text="3.Material_Design"
                android:textSize="20sp" />


        </LinearLayout>



    </LinearLayout>



</RelativeLayout>